#include <stdio.h>

int main() {
    int i,j,k,n,a=1;
    printf("enter the number of rows you want to print in your pyramid:");
    scanf("%d",&n);
    for(i=1;i<=n;i++)
    {
        for(j=1;j<=i;j++)
        {
            printf("%d ",a);a++;
        }
       /* for(k=1;k<=i;k++)
        {
        printf(" 1");
    }*/
    printf("\n");
    }
    return 0;
}
